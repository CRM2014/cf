<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- 与spring集成的写法，action等交予spring管理 -->
	<package name="login" extends="struts_base" namespace="/account">
		<action name="login-*" class="loginAction" method="{1}">
			<result name="login">/view/account/login.jsp</result>
			<result name="success">/view/account/user.jsp</result>
			<result name="fail" type="redirect">
				login-login.action
			</result>
		</action>
	</package>
</struts>