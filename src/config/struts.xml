<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- 更改struts2请求Action的后缀名，默认为action。若想去掉后缀，设为","即可 -->
	<constant name="struts.action.extension" value="action"></constant>

	<package name="struts_base" extends="struts-default" namespace="/">

		<interceptors>
			<interceptor name="checkLogin" class="checkLoginInterceptor" />
			<interceptor-stack name="checkLoginInterceptor">
				<interceptor-ref name="checkLogin" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>


		<default-action-ref name="index.action"></default-action-ref>


		<global-results>
			<result name="checkLoginFail">/view/account/login.jsp</result>
		</global-results>

		<action name="index">
			<result>/view/account/login.jsp</result>
		</action>
	</package>

	<!-- 包含的配置文件 -->
	<include file="/config/struts-account.xml"></include>
	<include file="/config/struts-marketing.xml"></include>
</struts>